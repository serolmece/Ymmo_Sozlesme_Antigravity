<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    
    <!-- CRITICAL FIX: Remove WebDAV Module to allow PUT and DELETE methods -->
    <modules>
      <remove name="WebDAVModule" />
    </modules>
    
    <handlers>
      <remove name="WebDAV" />
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <match url="/*" />
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>
    
    <security>
      <requestFiltering>
        <verbs allowUnlisted="true">
           <!-- Explicitly allow acting verbs just in case -->
           <add verb="GET" allowed="true" />
           <add verb="POST" allowed="true" />
           <add verb="PUT" allowed="true" />
           <add verb="DELETE" allowed="true" />
        </verbs>
      </requestFiltering>
    </security>

    <iisnode watchedFiles="web.config;*.js" devErrorsEnabled="true" loggingEnabled="true" />
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>
